@model Bulky.Models.ViewModels.ProductVM
<form method="post" class="border p-3 my-4" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden/>

    <div class="row pb-2">
        <h2 class="text-primary">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
        <hr />
    </div>


    @*  <div asp-validation-summary="All"></div> *@


    <div class="mb-3 row">
        <label asp-for="Product.Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.ISBN" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.ISBN" class="form-control" />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.Author" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Author" class="form-control" />
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.ListPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.ListPrice" class="form-control" />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.Price50" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Price50" class="form-control" />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.Price100" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Price100" class="form-control" />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.ImageUrl" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="file" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Product.CategoryId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CatgoryList" class="form-select border-0 shadow">
                <option disabled selected>-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>


    <div class="row">
        <div class="col-6 col-md-3">
            @if (Model.Product.Id != 0)
            {
                <button type="submit" class="btn btn-primary form-control">Update</button>
            }
            else{
                   <button type="submit" class="btn btn-primary form-control">Create</button>
            }
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                Back To List
            </a>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
